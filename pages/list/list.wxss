.shop-list {
  padding: 10rpx 20rpx;
}
.shop {
  display: flex;
  border-bottom: 1px solid #ccc;
  padding: 10rpx 0;
  position: relative;
}
.shop image{
  width: 200rpx;
  height: 200rpx;
}
.shop .shop-info {
  width: 550rpx;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}
.shop .shop-info text {
  font-size: 30rpx;
  color: #333;
  line-height: 40rpx;
}
.shop .shop-info .name{
  font-size: 36rpx;
  color: #000;
  line-height: 50rpx;
}
.shop .shop-info .score{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: #EE523D;
  padding: 6rpx;
  border-radius: 10rpx;
  color: #fff;
}